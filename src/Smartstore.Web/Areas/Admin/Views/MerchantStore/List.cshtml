@using Smartstore.Admin.Models.MerchantStores
@model MerchantStoreModel
@{
    ViewBag.Title = T("Admin.Catalog.MerchantStores").Value;
}

<div class="section-header">
    <div class="title">
        <i class="fa fa-store"></i>
        <span>@ViewBag.Title</span>
    </div>
    <div class="options">
        <zone name="admin_button_toolbar_before" />
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            <span>@T("Admin.Common.AddNew")</span>
        </a>
        <zone name="admin_button_toolbar_after" />
    </div>
</div>

<partial name="_Grid.MerchantStores" model="null" />