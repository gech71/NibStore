@model CombinedDiscountTabsViewModel
@{
    Layout = "_AdminLayout";
}

<ul class="nav nav-tabs mb-3" id="discountTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="list-tab" data-bs-toggle="tab" data-bs-target="#list" type="button" role="tab">Discount List</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="apply-tab" data-bs-toggle="tab" data-bs-target="#apply" type="button" role="tab">Apply Discount</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="withdiscounts-tab" data-bs-toggle="tab" data-bs-target="#withdiscounts" type="button" role="tab">Products With Discounts</button>
    </li>
</ul>

<div class="tab-content border p-3" id="discountTabsContent">
    <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
        @Html.Partial("_Grid.Discounts", Model.Discount)
    </div>
    <div class="tab-pane fade" id="apply" role="tabpanel" aria-labelledby="apply-tab">
        @Html.Partial("_Grid.Products", Model.ProductList)
    </div>
    <div class="tab-pane fade" id="withdiscounts" role="tabpanel" aria-labelledby="withdiscounts-tab">
        @Html.Partial("_Grid.ProductsWithDiscounts", Model.ProductsWithDiscounts)
    </div>
</div>
